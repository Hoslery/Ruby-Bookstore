<% form({ method: :post },{ obj: @parameters }) do |f| %>
  <div class="grid-x grid-margin-x">
    <div class="large-12 cell">
      <%= f.input(:title, type: :select, label: 'Выберите канц. товар', placeholder: 'Ножницы',options: @supplies, add_blank: true)%>
    </div>
    <div class="large-12 cell">
      <%= f.button(value: 'Добавить', class: 'button') %>
      <a href="/shop/list" class="button secondary">Отмена</a>
    </div>
  </div>
<% end %>